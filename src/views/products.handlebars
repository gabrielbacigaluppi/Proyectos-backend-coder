<h2>HOME</h2>
{{#if session.isAdmin}}
    <h3>Welcome {{session.first_name}}, your email is: {{session.email}}, Rol: Admin</h3>
{{else}}
    <h3>Welcome {{session.first_name}}, your email is: {{session.email}}, Rol: User</h3>
{{/if}}
{{!-- <h3>Welcome {{session.first_name}}, your email is: {{session.email}}, Rol: {{session.isAdmin}}</h3> --}}
<button onclick="location.href='/api/users/logout'">Logout</button>

<h3>Listado de productos</h3>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th> 
        </tr>
    </thead>

    <tbody>        
        {{#if session.isAdmin}}
            {{#each productsArray}}
            <tr>
                {{#each this}}
                {{#if this}}
                    {{#if _id}}
                        <td>{{_id}}</td>
                    {{/if}}
                    {{#if title}}
                        <td>{{title}}</td>
                        <td>
                            <a href="/api/products/{{this._id}}">Detalles</a>
                        </td>
                        <td>
                            <button >Actualizar producto</button>
                        </td>
                        <td>
                            <button >Eliminar producto</button>
                        </td>
                        
                    {{/if}}
                
                {{/if}}
                {{/each}}
              
            </tr>
            {{/each}}    
            <td>
                <button >Nuevo producto</button>
            </td>

        {{else}}
            {{#each productsArray}}
            <tr>
                {{#each this}}
                {{#if this}}
                {{#if _id}}
                    <td>{{_id}}</td>
                {{/if}}
                {{#if title}}
                    <td>{{title}}</td>
                    <td>
                        <a href="/api/products/{{this._id}}">Detalles</a>
                        <input type="number" id="quantity-{{this._id}}" value="1" min="1">
                        <button class="add-to-cart-button" data-product-id="{{this._id}}" onclick="addToCart('{{this._id}}')">AÃ±adir al carrito</button>
                    </td>
                    
                {{/if}}
                
                {{/if}}
                {{/each}}
                
            </tr>
            {{/each}}    
        {{/if}}

    </tbody>
</table>


